<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/fondo_combate"
    android:layout_height="match_parent"
    tools:context=".Combate">

    <ImageView
        android:id="@+id/image_tuPokemon"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="236dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ProgressBar
        android:id="@+id/ProgressBar01"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="121dp"
        android:layout_height="15dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="200dp"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/progressbar"
        android:secondaryProgress="0"
        app:layout_constraintBottom_toTopOf="@+id/image_tuPokemon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar02"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="121dp"
        android:layout_height="15dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="80dp"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/progressbar"
        android:secondaryProgress="0"
        app:layout_constraintBottom_toTopOf="@+id/image_pokemonRival"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_pokemonRival"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="236dp"
        android:layout_marginEnd="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btn_ataque1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="315dp"
        android:background="#B64545"
        android:fontFamily="@font/antic_slab"
        android:text="Ataque1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_ataque2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="315dp"
        android:background="#B64545"
        android:fontFamily="@font/antic_slab"
        android:text="Ataque2"
        app:layout_constraintStart_toEndOf="@+id/btn_ataque1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_huir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="315dp"
        android:layout_marginEnd="28dp"
        android:background="#4CAF50"
        android:fontFamily="@font/antic_slab"
        android:text="Huir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/btn_atrapar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="315dp"
        android:layout_marginEnd="24dp"
        android:background="#3F51B5"
        android:fontFamily="@font/antic_slab"
        android:text="Atrapar"
        app:layout_constraintEnd_toStartOf="@+id/btn_huir"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="289dp"
        android:layout_height="115dp"
        android:layout_marginEnd="-10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/area" />

    <TextView
        android:id="@+id/area_txt"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:fontFamily="@font/antic_slab"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <ImageView
        android:id="@+id/image_pokeball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pokebola" />


</androidx.constraintlayout.widget.ConstraintLayout>